<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="50dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="6dp"
    android:layout_margin="3dp"
    android:background="@drawable/measurement_background">

    <!-- Measurement Checkbox -->
    <CheckBox
        android:id="@+id/measurementCheckbox"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginBottom="4dp" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/measurementIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_measurement_default"
        android:layout_marginBottom="2dp" />

    <!-- Value -->
    <TextView
        android:id="@+id/measurementValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="1dp" />

    <!-- Unit -->
    <TextView
        android:id="@+id/measurementUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mmHg"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>